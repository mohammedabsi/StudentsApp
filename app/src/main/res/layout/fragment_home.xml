<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:gravity="center"
    android:rowCount="3"


 >


    <androidx.cardview.widget.CardView
        android:id="@+id/firstcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="4"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/firstIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/resturant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/blural"
            android:padding="5dp"
            android:text="@string/resturants"
            android:textColor="@color/black_gray"
            android:textSize="13sp"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/residences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/blural"
            android:padding="5dp"
            android:text="@string/residence"
            android:textColor="@color/black_gray"
            android:textSize="13sp"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/forthcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="4"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdcv"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/libraries" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/blural"
            android:padding="5dp"
            android:text="@string/libraries"
            android:textColor="@color/black_gray"
            android:textSize="13sp"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/thirdcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/entertainment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/blural"
            android:padding="5dp"
            android:text="@string/entertainment"
            android:textColor="@color/black_gray"
            android:textSize="13sp"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>



</GridLayout>

